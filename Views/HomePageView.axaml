	<Grid ColumnDefinitions="*,*,*" Background="#555555">
		<Grid Grid.Column="0" RowDefinitions="*,*">
			<Border Grid.Row="0" BorderBrush="Black" BorderThickness="1"
					CornerRadius="20" Margin="2">
			</Border>
			<Border Grid.Row="0"  BorderBrush="Black" BorderThickness="1" Background="#d0600f" Opacity="200"
					CornerRadius="20" Margin="2">
			</Border>
			<StackPanel>
				<TextBlock Classes="text" HorizontalAlignment="Center" VerticalAlignment="Center"
						   Padding="30" FontFamily="Bold">PREVIOUS MATCH</TextBlock>
			</StackPanel>
			<Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"
					CornerRadius="20" Margin="2">
			</Border>
			<Border Grid.Row="1"  BorderBrush="Black" BorderThickness="1" Background="#d0600f" Opacity="200"
					CornerRadius="20" Margin="2">
			</Border>
			<WrapPanel Grid.Row="1" ClipToBounds="True" HorizontalAlignment="Center">
				<Border Classes="Rect" Padding="10"/>
			</WrapPanel>
			<TextBlock Grid.Row="1" Classes="text" 
				   HorizontalAlignment="Center" VerticalAlignment="Center">VIEW SQUAD</TextBlock>
		</Grid>
		<Grid Grid.Column="1" RowDefinitions="*,*">
			<Border Grid.Row="0" BorderBrush="Black" BorderThickness="1"
					CornerRadius="20" Margin="2">
			</Border>
			<Border Grid.Row="0"  BorderBrush="Black" BorderThickness="1" Background="#d0600f" Opacity="200"
					CornerRadius="20" Margin="2">
			</Border>
			<StackPanel>
				<TextBlock Classes="text" HorizontalAlignment="Center" VerticalAlignment="Center"
						   Padding="30" FontFamily="Bold">NEXT MATCH</TextBlock>
			</StackPanel>
			<Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"
					CornerRadius="20" Margin="2">
			</Border>
			<Border Grid.Row="1"  BorderBrush="Black" BorderThickness="1" Background="#d0600f" Opacity="200"
					CornerRadius="20" Margin="2">
			</Border>
			<TextBlock Grid.Row="1" Classes="text"
					   HorizontalAlignment="Center" VerticalAlignment="Center">PAY SUBS</TextBlock>
		</Grid>
		<Grid Grid.Column="2">
			<Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"
					CornerRadius="20" Margin="2">
			</Border>
			<Border Grid.Row="1"  BorderBrush="Black" BorderThickness="1" Background="#d0600f" Opacity="100"
					CornerRadius="20" Margin="2">
			</Border>
			<ScrollViewer>
				<StackPanel>
					<TextBlock Classes="text" HorizontalAlignment="Center" VerticalAlignment="Center"
							   Padding="30" FontFamily="Bold" FontSize="24">LEAGUE TABLE</TextBlock>
					<Grid ColumnDefinitions="1*,5*,1*">
						<TextBlock Classes="text" HorizontalAlignment="Center" Grid.Column="0">Pos</TextBlock>
						<TextBlock Classes="text" Grid.Column="1">Team</TextBlock>
						<TextBlock Classes="text" HorizontalAlignment="Center" Grid.Column="2">Pts</TextBlock>
					</Grid>
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>

</UserControl>
